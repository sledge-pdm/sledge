{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      // "@sledge/ui": ["../../packages/ui"],
      // "@sledge/theme": ["../../packages/theme"],
      // "@sledge/core": ["../../packages/core"],
      "@sledge/wasm": ["../../packages/wasm/pkg/sledge_wasm.js"]
    },
    "rootDirs": ["src"]
  }
}
