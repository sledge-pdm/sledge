{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@sledge/ui": ["../../packages/ui"],
      "@sledge/theme": ["../../packages/theme"],
      "@sledge/core": ["../../packages/core"]
    },
    "types": ["vite/client"]
  }
}
