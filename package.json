{
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "dev": "pnpm -F sledge dev",
    "build": "pnpm -F sledge build",
    "site:dev": "pnpm -F sledge-website dev",
    "site:build": "pnpm -F sledge-website build",
    "wasm:build": "cd packages/wasm && pnpm --ignore-workspace i && wasm-pack build --target bundler",
    "tsc": "pnpm -r exec tsc --noEmit --skipLibCheck",
    "test": "vitest run -c configs/test/vitest.config.ts",
    "test:ui": "vitest -c configs/test/vitest.config.ts",
    "prettier": "prettier --write . --config configs/format/prettier.config.json",
    "lint:css": "stylelint \"**/*.{css,scss}\" --config configs/lint/stylelint.config.json",
    "cargo:format": "cd packages/wasm && cargo fmt && cd ../../apps/sledge/src-tauri && cargo fmt",
    "format": "pnpm prettier && pnpm cargo:format",
    "prepare": "husky"
  },
  "devDependencies": {
    "@acab/ecsstatic": "^0.9.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
